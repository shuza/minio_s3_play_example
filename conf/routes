# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                 controllers.HomeController.index()


###     Managing User
POST        /api/v1/user/create                               controllers.UserController.create()
POST        /api/v1/user/login                                controllers.AuthController.login()
GET         /api/v1/user/logout/:userHash/:accessToken        controllers.AuthController.logout(userHash: String, accessToken: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                     controllers.Assets.versioned(path="/public", file: Asset)
